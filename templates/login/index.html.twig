{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	{% if error %}
		<div class="alert alert-danger">
			{{ error.messageKey|trans(error.messageData, 'security') }}
		</div>
	{% endif %}

	<div class="container">
		<h1>Formulaire de connexion</h1>
		<form action="{{ path('app_login') }}" method="post">
			<div class="form-group">
				<label for="email" class="form-label mt-4">Email</label>
				<input type="email" class="form-control" id="email" name="_email" placeholder="Enter email" value="{{ last_username }}">
			</div>
			<div class="form-group">
				<label for="password" class="form-label mt-4">Mot de Passe</label>
				<input type="password" class="form-control" id="password" name="_password" placeholder="********">
			</div>
		</form>

		<button type="submit" class="btn btn-primary mt-4">Connexion</button>
	</div>
{% endblock %}
